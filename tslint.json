/**
 * This starter project recommended using Microsoft TSLint rules.
 * Please see https://github.com/Microsoft/tslint-microsoft-contrib for more details.
 */

 {
    "extends": [
      "tslint-microsoft-contrib"
    ],
    "defaultSeverity": "warning",
    "rules": {
      "mocha-no-side-effect-code": false,
      "missing-jsdoc": false,
      "no-relative-imports": false,
      "export-name": false,
      "promise-function-async": false,
      "no-void-expression": false,
      "no-any": false,
      "no-unsafe-any": false,
      "no-console": false,
      "no-empty": false,
      "one-line": false,
      "interface-name": false,
      "no-empty-interface": false,
      "no-trailing-whitespace": false,
      "eofline": true,
      "no-require-imports": true,
      "strict-boolean-expressions": false,
      "prefer-template": false,
      "match-default-export-name": false,
      "await-promise": false,
      "no-backbone-get-set-outside-model": false,
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-rest-spread",
        "check-type",
        "check-type-operator",
        "check-preblock"
      ],
      "trailing-comma": [ // https://palantir.github.io/tslint/rules/trailing-comma/
        true,
        {
          "multiline": "always",
          "singleline": "never"
        }
      ],
      "typedef": [
        true,
        "parameter",
        "property-declaration",
        "member-variable-declaration"
      ]
    }
  }